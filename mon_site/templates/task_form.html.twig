{# templates/task_form.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Nouvelle tâche{% endblock %}

{% block body %}
    <h1>Créer ou modifier une tâche</h1>
    {{ form_start(form) }}
        {{ form_row(form.task) }}
        {{ form_row(form.dueDate) }}
        <button class="btn btn-primary">Enregistrer</button>
    {{ form_end(form) }}
{% endblock %}
